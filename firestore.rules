rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Get user document
    function getUserDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }
    
    // Check if user has specific role
    function hasRole(role) {
      return isAuthenticated() && getUserDoc().data.role == role;
    }
    
    // Check if user is admin or super admin
    function isAdmin() {
      return isAuthenticated() && 
        (getUserDoc().data.role == 'admin' || getUserDoc().data.role == 'super_admin');
    }
    
    // Check if user is super admin
    function isSuperAdmin() {
      return isAuthenticated() && getUserDoc().data.role == 'super_admin';
    }
    
    // Check if user is verified donor
    function isVerifiedDonor() {
      return isAuthenticated() && getUserDoc().data.role == 'verified_donor';
    }
    
    // Check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // ============================================
    // USERS COLLECTION
    // ============================================
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId) || isAdmin();
      
      // Users can create their own profile on signup
      allow create: if isOwner(userId) && 
        request.resource.data.role == 'donor'; // New users get 'donor' role
      
      // Users can update their own profile (except role)
      allow update: if (isOwner(userId) && 
        request.resource.data.role == resource.data.role) || isAdmin();
      
      // Only super admin can delete users
      allow delete: if isSuperAdmin();
    }
    
    // ============================================
    // DONORS COLLECTION
    // ============================================
    match /donors/{donorId} {
      // Public Read: Allow if donor is active
      // Authenticated Read: Allow always
      allow read: if resource.data.active == true || isAuthenticated();
      
      // Create: Only admins can add donors
      allow create: if isAdmin();
      
      // Update: Admins can update any, verified donors can update their own
      allow update: if isAdmin() || 
        (isVerifiedDonor() && resource.data.userId == request.auth.uid);
      
      // Delete: Only admins
      allow delete: if isAdmin();
    }
    
    // ============================================
    // VERIFICATIONS COLLECTION
    // ============================================
    match /verifications/{verificationId} {
      // Only the donor and admins can read verification status
      allow read: if isOwner(resource.data.donorId) || isAdmin();
      
      // Only admins can create/update verifications
      allow create, update: if isAdmin();
      
      // Only super admin can delete
      allow delete: if isSuperAdmin();
    }
    
    // ============================================
    // EMERGENCIES COLLECTION
    // ============================================
    match /emergencies/{emergencyId} {
      // Public can read active emergencies
      allow read: if resource.data.active == true || isAdmin();
      
      // Only admins can create emergencies
      allow create: if isAdmin();
      
      // Only admins can update
      allow update: if isAdmin();
      
      // Only super admin can delete
      allow delete: if isSuperAdmin();
    }
    
    // ============================================
    // ANALYTICS COLLECTION (Read-only aggregates)
    // ============================================
    match /analytics/{docId} {
      // Only admins can read analytics
      allow read: if isAdmin();
      
      // Only system (Cloud Functions) can write
      allow write: if false;
    }
    
    // ============================================
    // AUDIT LOGS COLLECTION
    // ============================================
    match /auditLogs/{logId} {
      // Only super admin can read logs
      allow read: if isSuperAdmin();
      
      // Only system can write logs
      allow write: if false;
    }
  }
}
